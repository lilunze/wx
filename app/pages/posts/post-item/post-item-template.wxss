.article-list {
  margin-bottom: 10px;
  background: #fff;
  padding-bottom: 10px;
}

.article-img-container
{
    width: 100%;
    height: 360rpx;
    overflow: hidden;
}
.article-img {
  width: 100%;
  height: 240px;
}

.author-avatar {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  vertical-align: middle;
}

.author-name {
  font-size: 14px;
  vertical-align: middle;
  padding-left: 30px;
  color: #666;
}

.timestamp {
  font-size: 14px;
  padding-left: 20px;
  color: #666;
  vertical-align: middle;
}

.article-info {
  padding: 5px 20rpx;
}

.article-title {
  padding: 10px 20px;
  font-size: 18px;
  color: #666;
  font-weight: bold;
}
