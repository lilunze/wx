@import "../../movies/stars/stars-template.wxss";
.article-img-container
{
    display: inline-block;
    width: 280rpx;
    height: 360rpx;
    overflow: hidden;
    margin: 20rpx;
}
.book-title
{
  font-size: 42rpx;
  font-weight: bold;
  line-height: 40rpx;
  margin: 60rpx 30rpx 20rpx;
}
.article-img {
  width: 100%;
}
.article-info {
  display: inline-block;
  width: 380rpx;
  vertical-align: top;
  margin: 20rpx 0;
}
.date,.pages,.price,.binding,.author-name,.publisher
{
  font-size: 24rpx;
  color: #666;
  margin: 10rpx 0;
}
.isbn
{
  font-size: 24rpx;
  color: #888;
  margin-bottom: 20rpx;
}
.book-info
{
  margin-bottom: 50rpx;
}
.book-desc,.author-desc,.catalog
{
  box-sizing: border-box;
  padding: 0 20rpx;
}
.desc-title
{
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.desc-text
{
  font-size: 24rpx;
  text-indent: 48rpx;
  line-height: 40rpx;
  margin-bottom: 50rpx;
  color: #666;
}
.catalog .desc-text
{
  text-indent: 0;
  padding-left: 50rpx;
}
.stars-container .score
{
  color: #E76648;
}